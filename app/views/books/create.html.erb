
<div class='col-md-offset-3 col-md-6 pad-down'>
 <form action="/save_book_data" method="post" enctype="multipart/form-data">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <div class='form-group'>
    <label>Image: </label>
    <input class="form-control" type="file" id="image" name="image">
  </div>
  <div class='form-group'>
    <label>Title: </label>
    <input class="form-control" type="text" id="title" name="title" placeholder="eg. The Hero's Journey">
  </div>
  <div class='form-group'>
    <label>Author: </label>
    <input class="form-control" type="text" id="author" name="author" placeholder="eg. Campbell">
  </div>
  <div class='form-group'>
    <label>Blurb: </label>
    <textarea class="form-control" name="blurb" rows="5"></textarea>
  </div>
  <div class='form-group'>
    <label>ISBN: </label>
    <input class="form-control" type="text" id="isbn" name="isbn">
  </div>
  <input class="btn btn-success" id="save-book" type="submit" value="Save">
 </form>
</div>
