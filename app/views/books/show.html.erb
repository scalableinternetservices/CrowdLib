<section>
  <div class="container">
    <div class="product-details"><!--product-details-->
      <div class="col-sm-8 padding-right">
          <div class="col-sm-6">
            <div class="view-product">
              <img class="book-image" src="<% unless @book.image_url.nil? %><%= @book.image_url %><% else %>placeholder_cover.jpg<% end %>" />
            </div>
          </div>
          <div class="col-sm-6">
            <div class="product-information"style="height:400px"><!--/product-information-->
              <h2><%= @book.title %></h2>
              <p>Book ID: <%= @book.id %></p>
              <p><b>Author:</b> <%= @book.author %></p>
              <p><b>Publisher:</b> <%= @book.publisher %></p>
              <p><b>Edition:</b> <%= @book.edition %></p>
              <p><b>ISBN:</b> <%= @book.ISBN%></p>
              <p><b>Genre:</b> <%= @book.genres.first.name%></p>
              <p><b>Rating:</b><%= rating_for @book,  "author",enable_half: true %></p>
              <br/>
              <br/>
              <%= link_to "<i class=\"fa fa-shopping-cart\"></i>Borrow".html_safe, books_request_path(:id => @book.id), :class => "btn btn-fefault cart" %>
            </div>
            <!--/product-information-->
          </div>
          <!--col-sm-4-->
      </div><!--col-sum-9-->
          <div class="col-sm-4 pad-down" >
            <div class="map minimap" style= 'width:700px; height:400px'></div>
          </div><!--col-sum-3-->
          <script>
            var current_user_lat_lng = {lat: <%= @book_owner_lat %>, lng: <%= @book_owner_lng %>}; var curent_user_address = "<%= @book_owner_add%>";
          </script>
          <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=drawing&callback=book_initmap"></script>
        </div><!--/product-details-->
  </div>
  <!--container-->
</section>
