
<div class='col-md-8 pad-down'>
 <form action="/save_book_data" method="post" enctype="multipart/form-data">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <input type="hidden" name="id" value="<%= @book.id %>" />
  <div class='form-group'>
    <label>Image: </label>
    <input class="form-control" type="file" id="image" name="image">
  </div>
  <div class='form-group'>
    <label>Title: </label>
    <input class="form-control" type="text" id="title" name="title" placeholder="eg. The Hero's Journey" value="<%= @book.title %>">
  </div>
  <div class='form-group'>
    <label>Author: </label>
    <input class="form-control" type="text" id="author" name="author" placeholder="eg. Campbell" value="<%= @book.author %>">
  </div>
  <div class='form-group'>
    <label>Blurb: </label>
    <textarea class="form-control" name="blurb" rows="5"><%= @book.blurb %></textarea>
  </div>
  <div class='form-group'>
    <label>ISBN: </label>
    <input class="form-control" type="text" id="isbn" name="isbn" value="<%= @book.isbn %>">
  </div>
  <input class="btn btn-success" id="save-book" type="submit" value="Save">
 </form>
</div>
<div class='col-md-4'>
  <img class="book-image" src="<% unless @book.image_file_name.nil? %><%= @book.image.url(:original) %><% else %>/book_not_found.png<% end %>" />
</div>
