<section id="form"><!--form-->
  <div class="container">
    <div class="login-form"><!--login form-->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-sm-4 col-sm-offset-1">
            <h2 style = "color:#FE980F">Signup!</h2>
            <%= devise_error_messages! %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4 col-sm-offset-1">
            <div class="field">
              <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
            </div>
            <div class="field">
              <%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %>
            </div>
            <div class="field">
              <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name" %>
            </div>
            <div class="field">
              <%= f.email_field :email, autofocus: true, placeholder: :email %>
            </div>
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", placeholder: :password %>
            </div>
            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: :password_confirmation  %>
            </div>
            <div class='field'>
              <%= f.text_field :address, autocomplete: "off" ,placeholder: "Address", :id=>"address" %>
              <%= f.hidden_field :lat, id: "lat" %>
              <%= f.hidden_field :lng, id: "lng" %>
            </div>
          </div>
          <!--col-->
          <div class="col-sm-6 col-sm-offset-1 pad-down" >
            <div class="map minimap" style= 'width:600px; height:350px'></div>
          </div>
          <script>
            var current_user_lat_lng = { lat: 34.4258 , lng: -119.7142 };
          </script>
          <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=drawing&callback=profile_initmap"></script>
        </div>
        <!--row-->
        <div class="row">
          <div class="col-sm-4 col-sm-offset-1">
            <button class="login-form btn btn-default">
              <% f.submit %>Signup
            </button>
          </div>
        </div>
        <!--row-->
      <% end %>
    </div>
    <!--/login form-->
  </div>
  <!--container-->
</section>
